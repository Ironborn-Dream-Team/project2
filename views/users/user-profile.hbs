<h1>USER PROFILE</h1>

{{#if userInSession}}
<h2>Welcome, {{ userInSession.username }}!</h2>


<div class="container">
  <div class="col-lg-4">
    <div class="card">
      <div class="card-body">

        <div class="row ">
          <div class="col-sm-3  d-flex align-items-center">
            <h6 class="mb-0">Full Name</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            <input type="text" class="form-control" value="{{ userInSession.username }}">
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-3  d-flex align-items-center">
            <h6 class="mb-0">Email</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            <input type="text" class="form-control" value="{{ userInSession.email }}">
          </div>
        </div>


        <div class="row mb-3">
          <div class="col-sm-3  d-flex align-items-center">
            <h6 class="mb-0">Number Phone</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            <input type="text" class="form-control" value="{{ userInSession.numberPhone }}">
          </div>
        </div>


        <div class="row mb-3">
          <div class="col-sm-3  d-flex align-items-center">
            <h6 class="mb-0">Address</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            <input type="text" class="form-control" value="{{userInSession.address}}">
          </div>
        </div>


        <div class="row">
          <div class="col-sm-3 "></div>
          <div class="col-sm-9 text-secondary">
            <a href="/auth/user-profile/edit" class="btn btn-danger px-4">Edit</a>
          </div>
        </div>



      </div>
    </div>

  </div>

</div>

<div class="container">
  <h2 class="bg-danger mt-5 p-2 fs-5 text-white d-flex justify-content-between">
    Items you're selling
  </h2>

  <ul class=" list-group mt-2 mb-2 p-2 fs-6">
    {{#each sellerProducts}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
       <a href="/products/{{_id}}">{{name}}</a>
      <span class="badge bg-danger rounded-pill">{{price}} €</span>
    </li>
    {{/each}}
  </ul>

  <div class=" d-flex justify-content-end m-2">
    <button type="button" class="btn btn-danger m-1">
      <a style="text-decoration: none; color: white" href="/products/create">Add new product</a>
    </button>
    <button type="button" class="btn btn-danger m-1">
      <a style="text-decoration: none; color: white" href="/see-all">See All</a>
    </button>
  </div>

</div>

<div class="container">
  <h2 class="bg-danger mt-5 p-2 fs-5 text-white d-flex justify-content-between">
    Favourite Items
  </h2>


  <ul class=" list-group mt-2 mb-2 p-2 fs-6">
    {{#each favouritesArray}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
       <a href="/products/{{_id}}">{{name}}</a>
      <span class="badge bg-danger rounded-pill">{{price}} €</span>
    </li>
    {{/each}}
  </ul>


  <div class=" d-flex justify-content-end m-2">
    <button type="button" class="btn btn-danger">
      <a style="text-decoration: none; color: white" href="/see-all">See All</a>
    </button>
  </div>

</div>

{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}