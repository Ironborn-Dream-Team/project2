                        <div class="card p-2 mb-3 " style="width: 25rem;">
                                <img src="{{this}}" class="card-img-top" alt="...">
                        </div>
                        {{/each}}

                </div>

                <div class="card-body">

                        <div class="row border-bottom mx-auto pb-2" style="width: 1000px;" id="title">

                                <h3 class="text-danger">Description</h3>
                                <p> {{productFound.description}} </p>

                        </div>


                        <div class="row border-bottom mt-3 mx-auto pb-2" style="width: 1000px;" id="title">

                                <h3 class="text-danger">Contact us</h3>
                                <div class="row">
                                        <div class="col-sm-3 d-flex align-items-center">
                                                <h6 class="mb-0">Sold by </h6>
                                        </div>
                                        <div class="col-sm-3 text-secondary">
                                                <h6 class="mb-2">{{ productFound.seller.username }}</h6>
                                        </div>
                                </div>

                                <div class="row ">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Number Phone</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-2">{{ productFound.seller.numberPhone }}</h6>
                                        </div>
                                </div>

                                <div class="row ">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-2">{{ productFound.seller.email }}</h6>
                                        </div>
                                </div>

                                <div class="row ">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Address</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-2">{{ productFound.seller.address }}</h6>
                                        </div>
                                </div>

                        </div>

                        <div class="row border-bottom mt-3 mx-auto pb-2" style="width: 1000px;" id="title">

                                <h3 class="text-danger">Details</h3>

                                <div class="row">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Price</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
