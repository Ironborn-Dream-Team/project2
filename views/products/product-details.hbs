<h1>{{productFound.name}}</h1>



<div class="container">
        <div class="col-lg-4">
                <div class="card">
                        <div class="card-body">

                                <div class="row ">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Sold by</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control"
                                                        value="{{productFound.seller.username}}">
                                        </div>
                                </div>

                                <div class="row mb-3">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Price</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="{{productFound.price}}â‚¬">
                                        </div>
                                </div>


                                <div class="row mb-3">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Min Age</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="{{productFound.minAge}}">
                                        </div>
                                </div>


                                <div class="row mb-3">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Max Age</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="{{productFound.maxAge}}">
                                        </div>
                                </div>


                                <div class="row mb-3">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Description</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <textarea name="description" class="form-control" cols="30"
                                                        rows="4">{{productFound.description}}</textarea>
                                        </div>
                                </div>


                                <div class="row">

                                        <div class="col">
                                                <form action="/products/{{productFound._id}}/delete" method="POST">
                                                        <button class="btn btn-danger px-4">Delete</button>
                                                </form>
                                        </div>

                                        <div class="col">
                                                <form action="/products/{{productFound._id}}/edit">
                                                        <button class="btn btn-danger px-4">Edit</button>
                                                </form>
                                        </div>

                                </div>



                        </div>
                </div>

        </div>

</div>

<br> <br>
{{#each productFound.images}}
<p><img src="{{this}}" alt=""> </p>
{{/each}}

{{#if isCreator}}
<form action="/products/{{productFound._id}}/delete" method="POST"><button type="button" class="btn btn-danger px-3 me-2">Delete</button></form>
<form action="/products/{{productFound._id}}/edit"><button type="button" class="btn btn-danger px-3 me-2">Edit</button></form>
{{/if}}

{{#if isFavourite}}
<form action="/products/{{productFound._id}}/removefavourite" method="POST"><button id="remove-favourite"></button></form>
{{else}}
<form action="/products/{{productFound._id}}/addfavourite" method="POST"><button id="add-favourite"></button></form>
{{/if}}