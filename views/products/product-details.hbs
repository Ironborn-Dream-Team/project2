                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Min Age</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-2">{{productFound.minAge}}</h6>
                                        </div>
                                </div>


                                <div class="row">
                                        <div class="col-sm-3  d-flex align-items-center">
                                                <h6 class="mb-0">Max Age</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-2">{{productFound.maxAge}}</h6>
                                        </div>
                                </div>


                        </div>


                        <div class="row mt-3 mx-auto pb-2" style="width: 1000px;" id="title">
                                <div class="row">
                                        {{#if isCreator}}
                                        <div class="col d-flex justify-content-center">
                                                <form action="/products/{{productFound._id}}/delete" method="POST">
                                                        <button class="btn btn-danger px-4">Delete</button>
                                                </form>
                                        </div>

                                        <div class="col d-flex justify-content-center">
                                                <form action="/products/{{productFound._id}}/edit">
