<div class="container d-flex justify-content-center align-items-center m-5">
   <div class="card p-3">
      <div class="row">

         <div class="col-md-6">
            <div class="form">
               <h2>Login</h2>
               {{#if errorMessage}}
                  <span>{{errorMessage}}</span>
               {{/if}}

               <form action="/auth/login" method="POST">

                  <div class="inputbox mt-3">
                     <span>Email</span>
                     <input type="email" placeholder="Email" name="email" class="form-control" required>
                  </div>

                  <div class="inputbox mt-3">
                     <span>Password</span>
                     <input type="password" placeholder="********" name="password" class="form-control" required>
                  </div>

                  <div class="d-flex justify-content-between align-items-center">
                     <div class="text-right">
                        <button type="submit" class="btn btn-danger register btn-block">Login</button>
                     </div>
                  </div>
               </form>

            </div>
         </div>


         <div class="col-md-6 d-flex justify-content-center align-items-center">
            <div class="text-center"> <img src="/public/images/kidzone.png" width="200">
            </div>
         </div>


      </div>
   </div>
</div>