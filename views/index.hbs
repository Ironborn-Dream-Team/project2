<main class="container w-50 mb-5">

  <div class=" container mb-5 mt-5 text-center">
    <h2><strong>Deal of the day</strong></h2>
  </div>


  <div id="carouselExampleInterval" class="carousel slide justify-content-center" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active" data-bs-interval="1000">
        <div class="carousel-caption">
          <a href="/products/{{this.[0].id}}" class="btn btn-danger">More details</a>
        </div>
        <img src="{{this.[0].images.[0]}}" class="d-block w-100" alt="{{this.[0].name}}">
      </div>

      <div class="carousel-item" data-bs-interval="2000">
        <div class="carousel-caption">
          <a href="/products/{{this.[1]._id}}" class="btn btn-danger">More details</a>
        </div>

        <img src="{{this.[1].images.[0]}}" class="d-block w-100" alt="{{this.[0].name}}">
      </div>

      <div class="carousel-item" data-bs-interval="3000">
        <div class="carousel-caption">
          <a href="/products/{{this.[2]._id}}" class="btn btn-danger">More details</a>
        </div>
        <img src="{{this.[2].images.[0]}}" class="d-block w-100" alt="{{this.[0].name}}">
      </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</main>